<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:background="@drawable/fragment_fill_bg"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".FillFragment">

    <ImageView
        android:id="@+id/image_view_ff"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_gravity="center" />

    <EditText
        android:id="@+id/edit_text_name_ff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="16dp"
        android:hint="Input name: "
        android:textAppearance="@style/ShapeAppearance.Material3.Corner.ExtraLarge"
        android:textColor="@color/black"
        android:textColorHint="@color/grey"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/edit_text_email_ff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Input email: "
        android:textAppearance="@style/ShapeAppearance.Material3.Corner.ExtraLarge"
        android:textColor="@color/black"
        android:textColorHint="@color/grey"
        android:textSize="24sp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="bottom|end"
        android:src="@drawable/ic_send" />

</LinearLayout>